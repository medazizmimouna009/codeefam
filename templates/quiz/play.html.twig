{% extends 'base.html.twig' %}

{% block body %}
    <div class="pagetitle">
        <h1>Quiz : {{ quiz.nom }}</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Barre de progression -->
                        <div class="progress mb-4">
                            <div id="progress-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                        </div>

                        {{ form_start(form) }}
                            {% for question in questions %}
                                <div class="question-card mb-4">
                                    <h3 class="question-text">{{ question.texte }}</h3>
                                    <div class="reponses-list d-grid gap-2">
                                        {% for reponse in question.reponses %}
                                            <button type="button"
                                                    class="btn btn-outline-primary response-button"
                                                    data-question-id="{{ question.id }}"
                                                    data-reponse-id="{{ reponse.id }}"
                                                    onclick="selectResponse(this)">
                                                {{ reponse.texte }}
                                            </button>
                                            <input type="radio"
                                                   id="question_{{ question.id }}_{{ reponse.id }}"
                                                   name="question_{{ question.id }}"
                                                   value="{{ reponse.id }}"
                                                   class="d-none">
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">Soumettre</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Variables globales pour suivre la progression
        let totalQuestions = {{ questions|length }}; // Nombre total de questions
        let answeredQuestions = 0; // Nombre de questions répondues

        // Fonction pour mettre à jour la barre de progression
        function updateProgressBar() {
            const progressPercentage = (answeredQuestions / totalQuestions) * 100;
            const progressBar = document.getElementById('progress-bar');
            progressBar.style.width = `${progressPercentage}%`;
            progressBar.textContent = `${Math.round(progressPercentage)}%`;
        }

        // Fonction pour sélectionner une réponse
        function selectResponse(button) {
            // Désactiver tous les boutons pour cette question
            const questionId = button.getAttribute('data-question-id');
            const buttons = document.querySelectorAll(`.response-button[data-question-id="${questionId}"]`);
            buttons.forEach(btn => btn.classList.remove('active', 'btn-primary', 'btn-outline-primary'));

            // Activer le bouton cliqué
            button.classList.add('active', 'btn-primary');
            button.classList.remove('btn-outline-primary');

            // Cocher l'input radio correspondant
            const reponseId = button.getAttribute('data-reponse-id');
            const radioInput = document.getElementById(`question_${questionId}_${reponseId}`);
            radioInput.checked = true;

            // Mettre à jour la progression
            if (!button.classList.contains('answered')) {
                answeredQuestions++;
                button.classList.add('answered');
                updateProgressBar();
            }
        }
    </script>

    <style>
        .response-button {
            text-align: left;
            transition: background-color 0.3s, color 0.3s;
        }
        .response-button.active {
            background-color: #0d6efd;
            color: white;
        }
        .progress-bar {
            transition: width 0.5s ease-in-out;
        }
    </style>
{% endblock %}