{# templates/quiz/show.html.twig #}

<div class="quiz-details">
    <h2>Quiz : {{ quiz.nom }}</h2>
    <p><strong>Niveau :</strong> {{ quiz.niveau }}</p>
    <p><strong>Cours :</strong> {{ quiz.nomCours.nom }}</p>

    <hr>

    <h3>Questions :</h3>
    {% for question in quiz.questions %}
        <div class="question mb-4">
            <h5>{{ question.texte }}</h5>
            <ul class="list-group">
                {% for reponse in question.reponses %}
                    <li class="list-group-item">
                        {{ reponse.texte }}
                        {% if reponse.isCorrecte %}
                            <span class="badge bg-success">Correcte</span>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% else %}
        <p>Aucune question disponible pour ce quiz.</p>
    {% endfor %}
</div>