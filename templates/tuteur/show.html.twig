{% extends 'base.html.twig' %}

{% block title %}Tuteur{% endblock %}

{% block body %}
    <h1>Tuteur</h1>
        {% if tuteur.role == 'ROLE_TUTEUR' %}
        <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ tuteur.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ tuteur.role }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ tuteur.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ tuteur.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tuteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ tuteur.prenom }}</td>
            </tr>
            <tr>
                <th>DateDeNaissance</th>
                <td>{{ tuteur.dateDeNaissance ? tuteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ tuteur.numTel }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ tuteur.adresse }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ tuteur.bio }}</td>
            </tr>
            <tr>
                <th>PhotoDeProfil</th>
                <td>{{ tuteur.photoDeProfil }}</td>
            </tr>
            <tr>
                <th>DateInscrit</th>
                <td>{{ tuteur.dateInscrit ? tuteur.dateInscrit|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ tuteur.specialite }}</td>
            </tr>
        </tbody>
    </table>
<a href="{{ path('app_tuteur_index') }}">back to list</a>
<a href="{{ path('app_tuteur_edit', {'id': tuteur.id}) }}">edit</a>
{{ include('tuteur/_delete_form.html.twig') }}
{% else %}
<p>Vous n'avez pas accès à ces informations.</p>
{% endif %}

{% endblock %}
