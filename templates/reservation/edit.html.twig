{% extends 'base.html.twig' %}

{% block title %}Modifier une Réservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .page-header {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            color: white;
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
            text-align: center;
            animation: fadeIn 1s ease-in;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .page-header::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(30deg);
            pointer-events: none;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .form-container:hover {
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            display: block;
        }
        .form-control {
            border-radius: 10px;
            padding: 10px 15px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
            outline: none;
        }
        .form-control.is-invalid {
            border-color: #e74c3c;
            background-image: none;
        }
        .invalid-feedback {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        .btn-custom {
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        .btn-primary {
            background-color: #3498db;
            color: white;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }
        .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
        }
        .btn-secondary {
            background-color: #95a5a6;
            color: white;
            box-shadow: 0 4px 15px rgba(149, 165, 166, 0.3);
        }
        .btn-secondary:hover {
            background-color: #7f8c8d;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(149, 165, 166, 0.4);
        }
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="page-header">
        <h1 class="display-4 mb-3"><i class="bi bi-pencil-square me-2"></i> Modifier une Réservation</h1>
        <p class="lead">Modifiez les détails de la réservation sélectionnée</p>
    </div>

    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <div class="form-container">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'reservation_form', 'class': 'needs-validation'}}) }}
            <div class="form-group">
                {{ form_label(form.evenement, 'Événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.evenement, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.evenement, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.dateRev, 'Date de Réservation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateRev, {'attr': {'class': 'form-control', 'min': 'now'|date('Y-m-d'), 'required': 'required'}}) }}
                {{ form_errors(form.dateRev, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Entrez un commentaire (min. 10 caractères)'}}) }}
                {{ form_errors(form.commentaire, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.status, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.status, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('reservation_afficher') }}" class="btn btn-custom btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour
                </a>
                <button type="submit" class="btn btn-custom btn-primary" id="submitBtn">
                    <i class="bi bi-save-fill me-2"></i>Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('reservation_form');
            const submitBtn = document.getElementById('submitBtn');
            const loadingOverlay = document.getElementById('loadingOverlay');

            // Client-side validation and feedback
            form.addEventListener('submit', function(e) {
                let isValid = true;

                // Check custom validation rules
                const commentaire = form.querySelector('#reservation_commentaire');
                if (commentaire.value.length > 0 && commentaire.value.length < 10) {
                    isValid = false;
                    commentaire.classList.add('is-invalid');
                } else {
                    commentaire.classList.remove('is-invalid');
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Veuillez corriger les erreurs avant de soumettre.');
                } else {
                    // Show loading overlay
                    loadingOverlay.style.display = 'flex';
                    submitBtn.disabled = true;
                }
            });

            // Reset form state on page load
            form.querySelectorAll('.form-control').forEach(input => {
                input.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid')) {
                        this.classList.remove('is-invalid');
                    }
                });
            });
        });
    </script>
{% endblock %}