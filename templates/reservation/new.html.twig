{# templates/reservation/new.html.twig #}
{% extends 'home.html.twig' %}

{% block title %}Créer une Réservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Ensure full page is white */
        body, .main, .section,   {
            background-color: #fff !important;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .page-header {
            padding: 20px 0;
            margin-bottom: 30px;
            text-align: left;
            background: #fff;
            color: #2c3e50;
        }
        .page-header h1 {
            font-size: 1.5rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .page-header .lead {
            font-size: 0.9rem;
            color: #6c757d;
            margin-top: 5px;
        }
        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            flex: 1 0 auto;
        }
        .form-container:hover {
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            display: block;
        }
        .form-control {
            border-radius: 10px;
            padding: 10px 15px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
            outline: none;
        }
        .form-control.is-invalid {
            border-color: #e74c3c;
            background-image: none;
        }
        .invalid-feedback {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        .btn-custom {
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        .btn-success {
            background-color: #2ecc71;
            color: white;
            box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
        }
        .btn-success:hover {
            background-color: #27ae60;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(46, 204, 113, 0.4);
        }
        .btn-secondary {
            background-color: #95a5a6;
            color: white;
            box-shadow: 0 4px 15px rgba(149, 165, 166, 0.3);
        }
        .btn-secondary:hover {
            background-color: #7f8c8d;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(149, 165, 166, 0.4);
        }
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container">
            <div class="page-header">
                <h1 class="display-4 mb-3"><i class="bi bi-plus-circle me-2"></i> Créer une Réservation</h1>
                <p class="lead">Home / Réservations / Nouvelle Réservation</p>
            </div>

            <!-- Loading Overlay -->
            <div class="loading-overlay" id="loadingOverlay">
                <div class="spinner"></div>
            </div>

            <div class="form-container">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'reservation_form', 'class': 'needs-validation'}}) }}
                    <div class="form-group">
                        {{ form_label(form.evenement, 'Événement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.evenement, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                        {{ form_errors(form.evenement, {'attr': {'class': 'invalid-feedback'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.dateRev, 'Date de Réservation', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.dateRev, {'attr': {'class': 'form-control', 'min': 'now'|date('Y-m-d'), 'required': 'required'}}) }}
                        {{ form_errors(form.dateRev, {'attr': {'class': 'invalid-feedback'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Entrez un commentaire (min. 10 caractères)'}}) }}
                        {{ form_errors(form.commentaire, {'attr': {'class': 'invalid-feedback'}}) }}
                    </div>

                    {# Hidden status field #}
                    {{ form_widget(form.status) }}

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_home') }}" class="btn btn-custom btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-custom btn-success" id="submitBtn">
                            <i class="bi bi-check-circle-fill me-2"></i>Créer la Réservation
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('reservation_form');
            const submitBtn = document.getElementById('submitBtn');
            const loadingOverlay = document.getElementById('loadingOverlay');

            // Client-side validation and feedback
            form.addEventListener('submit', function(e) {
                let isValid = true;

                // Check custom validation rules
                const commentaire = form.querySelector('#reservation_commentaire');
                if (commentaire && commentaire.value.length > 0 && commentaire.value.length < 10) {
                    isValid = false;
                    commentaire.classList.add('is-invalid');
                } else if (commentaire) {
                    commentaire.classList.remove('is-invalid');
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Veuillez corriger les erreurs avant de soumettre.');
                } else {
                    // Show loading overlay
                    loadingOverlay.style.display = 'flex';
                    submitBtn.disabled = true;
                }
            });

            // Reset form state on input
            form.querySelectorAll('.form-control').forEach(input => {
                input.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid')) {
                        this.classList.remove('is-invalid');
                    }
                });
            });
        });
    </script>
{% endblock %}