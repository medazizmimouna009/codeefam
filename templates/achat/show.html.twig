{% extends 'base.html.twig' %}

{% block title %}Achat{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center text-primary">Détails de l'Achat</h1>

        <div class="card shadow-lg border-0 rounded-3 bg-light p-4">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Id Utilisateur</th>
                        <td>{{ achat.utilisateur.id }}</td>
                    </tr>
                    <tr>
                        <th>Type Achat</th>
                        <td>{{ achat.typeAchat }}</td>
                    </tr>
                    <tr>
                        <th>Date Achat</th>
                        <td>{{ achat.dateAchat ? achat.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ achat.statut }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_achat_index') }}" class="btn btn-outline-secondary btn-lg">⬅ Back to List</a>
            <a href="{{ path('app_achat_edit', {'idAchat': achat.idAchat}) }}" class="btn btn-info btn-lg">✏ Edit</a>
        </div>

        <div class="mt-3 text-center">
            {{ include('achat/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}