{# templates/pagination/custom_pagination.html.twig #}

<nav aria-label="Page navigation">
    <ul class="pagination">
        {% if pagination.isFirstPage() == false %}
            <li class="page-item">
                <a href="{{ path(pagination.route, pagination.params|merge({(pagination.pageParameterName): 1})) }}" class="page-link">First</a>
            </li>
        {% endif %}

        {% for page in pagination.pagesInRange %}
            <li class="page-item {{ pagination.current == page ? 'active' : '' }}">
                <a href="{{ path(pagination.route, pagination.params|merge({(pagination.pageParameterName): page})) }}" class="page-link">{{ page }}</a>
            </li>
        {% endfor %}

        {% if pagination.isLastPage() == false %}
            <li class="page-item">
                <a href="{{ path(pagination.route, pagination.params|merge({(pagination.pageParameterName): pagination.pageCount})) }}" class="page-link">Last</a>
            </li>
        {% endif %}
    </ul>
</nav>