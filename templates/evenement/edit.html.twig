{% extends 'base.html.twig' %}

{% block title %}Modifier un Événement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .edit-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .page-header {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            color: white;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .form-card {
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border-radius: 10px;
            padding: 30px;
            background: white;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: 600;
            color: #2c3e50;
        }
        .form-control {
            border-radius: 8px;
            padding: 10px;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
        }
        .btn-action {
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 500;
            transition: all 0.2s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .btn-action:hover {
            transform: translateY(-2px);
        }
        .alert {
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5 edit-container">
    <div class="page-header text-center">
        <h1 class="display-4 mb-3"><i class="bi bi-pencil-square me-2"></i> Modifier l'Événement</h1>
        <p class="lead">Mettez à jour les détails de votre événement</p>
    </div>

    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i> {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> {{ message }}
        </div>
    {% endfor %}

    <div class="form-card">
        <form method="POST" action="{{ path('evenement_edit', {'id': evenement.id}) }}">
            {{ form_start(form) }}
            
            {# Champs du formulaire avec icônes #}
            <div class="form-group">
                {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-fonts"></i></span>
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-tag"></i></span>
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.startDate, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                    {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.endDate, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-check"></i></span>
                    {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.registrationDeadline, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-hourglass-split"></i></span>
                    {{ form_widget(form.registrationDeadline, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {# Boutons d'action #}
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-action me-2">
                    <i class="bi bi-save me-2"></i> Sauvegarder
                </button>
                <a href="{{ path('evenement_afficher') }}" class="btn btn-secondary btn-action">
                    <i class="bi bi-arrow-left me-2"></i> Retour
                </a>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Ajouter un effet au focus des champs
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', () => {
                    input.style.transition = 'all 0.3s ease';
                });
            });
        });
    </script>
{% endblock %}