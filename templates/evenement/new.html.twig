{% extends 'base.html.twig' %}

{% block title %}Créer un Événement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Ensure full page is white */
        body, .main, .section, .container {
            background-color: #fff !important;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .create-container {
            margin: 0 auto;
            flex: 1 0 auto; /* Allow content to grow but not shrink */
        }
        .page-header {
            padding: 20px 0; /* Reduced padding for simplicity */
            margin-bottom: 30px;
            text-align: left; /* Align left like the screenshot */
            background: #fff; /* White background */
            color: #2c3e50; /* Dark blue text */
        }
        .page-header h1 {
            font-size: 1.5rem; /* Adjusted for consistency with screenshot */
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px; /* Space between icon and title */
        }
        .page-header .lead {
            font-size: 0.9rem;
            color: #6c757d; /* Lighter gray for breadcrumb */
            margin-top: 5px;
        }
        .form-card {
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border-radius: 10px;
            padding: 30px;
            background: white;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: 600;
            color: #2c3e50;
        }
        .form-control {
            border-radius: 8px;
            padding: 10px;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #3498db; /* Changed to blue for visibility */
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
        }
        .btn-action {
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 500;
            transition: all 0.2s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .btn-action:hover {
            transform: translateY(-2px);
        }
        .error-message {
            font-size: 0.9em;
            margin-top: 5px;
        }
        /* Footer styling */
        .footer {
            text-align: center;
            padding: 10px 0;
            color: #6c757d;
            font-size: 0.9em;
            border-top: 1px solid #e9ecef;
            margin-top: auto; /* Push footer to bottom */
            flex-shrink: 0; /* Prevent footer from shrinking */
        }
    </style>
{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container py-5 create-container">
            <div class="page-header">
                <h1 class="display-4 mb-3"><i class="bi bi-plus-circle me-2"></i> Créer un Événement</h1>
                <p class="lead">Home / Événements</p>
            </div>

            <div class="form-card">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                {# Boucle sur tous les champs du formulaire #}
                {% for field in form %}
                    {% if field.vars.name != '_token' %} {# Exclure le champ CSRF #}
                        <div class="form-group">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {# Ajout d'icônes spécifiques selon le champ #}
                                {% if field.vars.name == 'titre' %}
                                    <span class="input-group-text"><i class="bi bi-fonts"></i></span>
                                {% elseif field.vars.name == 'type' %}
                                    <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                {% elseif field.vars.name == 'description' %}
                                    <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                                {% elseif field.vars.name == 'startDate' %}
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                {% elseif field.vars.name == 'endDate' %}
                                    <span class="input-group-text"><i class="bi bi-calendar-check"></i></span>
                                {% elseif field.vars.name == 'location' %}
                                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                {% elseif field.vars.name == 'registrationDeadline' %}
                                    <span class="input-group-text"><i class="bi bi-hourglass-split"></i></span>
                                {% endif %}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {# Affichage des erreurs #}
                            {% if field.vars.errors|length > 0 %}
                                <div class="text-danger error-message">
                                    {% for error in field.vars.errors %}
                                        <p><i class="bi bi-exclamation-circle me-1"></i> {{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}

                {# Boutons d'action #}
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-action me-2">
                        <i class="bi bi-check-circle me-2"></i> Créer
                    </button>
                    <a href="{{ path('evenement_afficher') }}" class="btn btn-secondary btn-action">
                        <i class="bi bi-arrow-left me-2"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation au focus des champs
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', () => {
                    input.style.transition = 'all 0.3s ease';
                });
            });
        });
    </script>
{% endblock %}