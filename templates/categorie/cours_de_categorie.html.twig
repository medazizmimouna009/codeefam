{# templates/categorie/s.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Cours de {{ categorie.nomCategorie }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Cours de {{ categorie.nomCategorie }}</h1>

        <div class="row">
            {% for cours in cours %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ cours.titre }}</h5>
                            <p class="card-text">{{ cours.description }}</p>
                            <a href="{{ path('app_cours_show_user', {'id': cours.id}) }}" class="btn btn-primary">
                                Voir le cours
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        Aucun cours disponible pour cette catégorie.
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}