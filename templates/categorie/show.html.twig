{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary fw-bold">
            <i class="fas fa-folder-open me-2"></i>Détails de la catégorie
        </h1>

        <!-- Détails de la catégorie -->
        <div class="card shadow-lg mb-5">
            <div class="card-header bg-primary text-white fw-bold">
                <i class="fas fa-info-circle me-2"></i>Informations de la catégorie
            </div>
            <div class="card-body">
                <h5 class="card-title fw-bold">{{ categorie.nomCategorie }}</h5>
                <p class="card-text"><strong>Description :</strong> {{ categorie.description }}</p>
            </div>
        </div>

        <!-- Noms de cours associés -->
        <h2 class="text-center mb-4 text-primary fw-bold">
            <i class="fas fa-book me-2"></i>Noms de cours associés
        </h2>
        {% if categorie.nomCours is not empty %}
            <div class="row">
                {% for nomCours in categorie.nomCours %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">{{ nomCours.nom }}</h5>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle me-2"></i>Aucun nom de cours associé à cette catégorie.
            </div>
        {% endif %}

        <!-- Cours associés -->
        <h2 class="text-center mb-4 text-primary fw-bold">
            <i class="fas fa-graduation-cap me-2"></i>Cours associés
        </h2>
        {% if categorie.cours is not empty %}
            <div class="row">
                {% for cours in categorie.cours %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">{{ cours.titre }}</h5>
                                <p class="card-text">{{ cours.description }}</p>
                                <p class="card-text"><strong>Durée :</strong> {{ cours.duree }}</p>
                                <a href="{{ path('app_cours_show', {'id': cours.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye me-2"></i>Voir
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle me-2"></i>Aucun cours associé à cette catégorie.
            </div>
        {% endif %}

        <!-- Boutons d'action -->
        <div class="d-flex justify-content-center gap-3 mt-5">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
