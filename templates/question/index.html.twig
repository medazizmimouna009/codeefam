{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Custom styles for the question index */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: rgb(129, 10, 75) !important;
            color: white;
        }
        .card-footer {
            background-color: #f8f9fa;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
        }

        /* Custom spacing for action buttons */
        .action-buttons .btn {
            margin-right: 30px; /* Adjust the spacing as needed */
        }
        .action-buttons .btn:last-child {
            margin-right: 0; /* Remove margin from the last button */
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h1 class="h4 mb-0">Liste des questions</h1>
                        </div>
                        <div class="card-body">
                            <!-- Formulaire de recherche et de filtre -->
                            <div class="mb-3">
                                <form method="get" action="{{ path('app_question_index') }}" class="form-inline">
                                    <div class="form-group mx-sm-3 mb-2">
                                        <input type="text" name="search" class="form-control" placeholder="Rechercher une question..." value="{{ app.request.query.get('search') }}">
                                    </div>
                                    <div class="form-group mx-sm-3 mb-2">
                                        <select name="course" class="form-control">
                                            <option value="">Tous les cours</option>
                                            {% for course in courses %}
                                                <option value="{{ course.id }}" {{ app.request.query.get('course') == course.id ? 'selected' : '' }}>{{ course.nom }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary mb-2">Rechercher</button>
                                </form>
                            </div>

                            <!-- Tableau des questions -->
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Texte</th>
                                        <th>Cours</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for question in questions %}
                                    <tr>
                                        <td>{{ question.id }}</td>
                                        <td>{{ question.texte }}</td>
                                        <td>{{ question.nomCours.nom }}</td>
                                        <td class="action-buttons">
                                            <!-- Button to trigger the modal -->
                                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#questionModal{{ question.id }}" title="Voir">
                                                <i class="fas fa-eye fa-sm"></i>
                                            </button>
                                            <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                                <i class="fas fa-pen fa-sm"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_question_delete', {'id': question.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette question ?');" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                                <button class="btn btn-danger btn-sm" title="Supprimer">
                                                    <i class="fas fa-trash fa-sm"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>

                                    <!-- Modal pour afficher les détails -->
                                    <div class="modal fade" id="questionModal{{ question.id }}" tabindex="-1" aria-labelledby="questionModalLabel{{ question.id }}" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="questionModalLabel{{ question.id }}">Détails de la question</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p><strong>Texte:</strong> {{ question.texte }}</p>
                                                    <p><strong>Cours:</strong> {{ question.nomCours.nom }}</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <tr>
                                        <td colspan="4">Aucune question trouvée</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer text-end">
                            <a href="{{ path('app_question_new') }}" class="btn btn-success">Créer une nouvelle question</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}