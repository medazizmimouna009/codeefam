{% extends 'base.html.twig' %}

{% block title %}New Question{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary fw-bold">
            Créer une nouvelle Question
        </h1>

        <div class="card shadow-lg p-4 mx-auto" style="max-width: 800px;">
            {{ form_start(form, {'attr': {'class': 'row g-3', 'novalidate': 'novalidate'}}) }}
                {# Texte de la question #}
                <div class="mb-3">
                    {{ form_label(form.texte, 'Texte de la question', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.texte, {
                        'attr': {
                            'class': 'form-control' ~ (form.texte.vars.valid ? '' : ' is-invalid'),
                            'placeholder': 'Entrez le texte de la question'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.texte) }}
                    </div>
                </div>

                {# Cours #}
                <div class="mb-3">
                    {{ form_label(form.nomCours, 'Cours', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.nomCours, {
                        'attr': {
                            'class': 'form-select' ~ (form.nomCours.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.nomCours) }}
                    </div>
                </div>

                {# Niveau de difficulté #}
                <div class="mb-3">
                    {{ form_label(form.niveau, 'Niveau de difficulté', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.niveau, {
                        'attr': {
                            'class': 'form-select' ~ (form.niveau.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.niveau) }}
                    </div>
                </div>

                {# Submit button #}
                <div class="col-12">
                    <button style="margin-left:300px" type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>

        {# Back to list link #}
        <div class="mt-4 text-center">
            <a href="{{ path('app_question_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}