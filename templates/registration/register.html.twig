{% block stylesheets %}
    <style>
        /* Custom styles for the registration page */
        .register {
            background-color: #f6f9ff;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .profile-picture-container {
            text-align: center;
            margin-bottom: 20px;
        }
        .profile-picture-input {
            display: none !important;
        }
        .profile-picture-label {
            display: inline-block;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: #e9ecef;
            cursor: pointer;
            overflow: hidden;
            border: 2px solid #dee2e6;
            position: relative; /* Added to ensure the image is positioned correctly */
        }
        .profile-picture-label img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures the image covers the entire circle */
            position: absolute; /* Added to ensure the image is positioned correctly */
            top: 0;
            left: 0;
        }
        .profile-picture-label:hover {
            border-color: #0d6efd;
        }
    </style>

    <!-- Favicons -->
    <link href="{{ asset('img/favicon.png') }}" rel="icon">
    <link href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">

    <!-- Vendor CSS Files -->
    <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/boxicons/css/boxicons.min.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/quill/quill.snow.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/quill/quill.bubble.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/remixicon/remixicon.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/simple-datatables/style.css') }}" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
    <main>
        <div class="container">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="d-flex justify-content-center py-4">
                                <a href="{{ path('app_home') }}" class="logo d-flex align-items-center w-auto">
                                    <img src="{{ asset('landing/img/favicon.png') }}" alt="">
                                    <span class="d-none d-lg-block">Codefam</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                        <p class="text-center small">Enter your personal details to create account</p>
                                    </div>

                                    {{ form_start(registrationForm, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                                        <!-- Profile Picture Input -->
                                        <div class="col-12 profile-picture-container text-center">
                                            <!-- Circular Image Preview -->
                                            <div class="profile-picture-label position-relative d-inline-block">
                                                <img id="profile-picture-preview" src="{{ asset('landing/img/default-profile.png') }}" alt="Profile Picture" class="rounded-circle border" style="width: 120px; height: 120px; object-fit: cover;">
                                            </div>

                                            <!-- Bootstrap 5 Styled File Input -->
                                            <div class="mt-2">
                                                {{ form_label(registrationForm.photoDeProfil, 'Photo de profil', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(registrationForm.photoDeProfil, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
                                            </div>
                                            <div class="invalid-feedback">Please upload a profile picture!</div>
                                        </div>

                                        <!-- Name Input -->
                                        <div class="col-12">
                                            {{ form_label(registrationForm.nom, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                            <div class="invalid-feedback">Please, enter your name!</div>
                                            {{ form_errors(registrationForm.nom) }}
                                        </div>
                                          <!-- prenom Input -->
                                          <div class="col-12">
                                          {{ form_label(registrationForm.prenom, 'Your prenom', {'label_attr': {'class': 'form-label'}}) }}
                                          {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                          <div class="invalid-feedback">Please, enter your prenom!</div>
                                          {{ form_errors(registrationForm.prenom) }}
                                      </div>

                                        <!-- Email Input -->
                                        <div class="col-12">
                                            {{ form_label(registrationForm.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                            <div class="invalid-feedback">Please enter a valid Email address!</div>
                                            {{ form_errors(registrationForm.email) }}
                                        </div>

                                        <!-- Phone Number Input -->
                                        <div class="col-12">
                                            {{ form_label(registrationForm.numTel, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(registrationForm.numTel, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                            <div class="invalid-feedback">Please enter your phone number!</div>
                                            {{ form_errors(registrationForm.numTel) }}
                                        </div>

                                        <!-- Date of Birth Input -->
                                        <div class="col-12">
                                            {{ form_label(registrationForm.dateDeNaissance, 'Date of Birth', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(registrationForm.dateDeNaissance, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                            <div class="invalid-feedback">Please enter your date of birth!</div>
                                            {{ form_errors(registrationForm.dateDeNaissance) }}
                                        </div>

                                        <!-- Address Input -->
                                        <div class="col-12">
                                            {{ form_label(registrationForm.adresse, 'Address', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                            <div class="invalid-feedback">Please enter your address!</div>
                                            {{ form_errors(registrationForm.adresse) }}
                                        </div>

                                        <!-- Password Input -->
                                        <div class="col-12">
                                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                            <div class="invalid-feedback">Please enter your password!</div>
                                            {{ form_errors(registrationForm.plainPassword) }}
                                        </div>

                                        <!-- Terms and Conditions Checkbox -->
                                        <div class="col-12">
                                            <div class="form-check">
                                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'required': 'required'}}) }}
                                                {{ form_label(registrationForm.agreeTerms, 'I agree and accept the terms and conditions', {'label_attr': {'class': 'form-check-label'}}) }}
                                                <div class="invalid-feedback">You must agree before submitting.</div>
                                                {{ form_errors(registrationForm.agreeTerms) }}
                                            </div>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                        </div>
                                    {{ form_end(registrationForm) }}

                                        <!-- Login Link -->
                                        <div class="col-12">
                                            <p class="small mb-0">Already have an account? <a href="{{ path('app_login') }}">Log in</a></p>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
  <!-- Vendor JS Files -->
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/quill/quill.js') }}"></script>
    <script src="{{ asset('vendor/simple-datatables/simple-datatables.js') }}"></script>
    <script src="{{ asset('vendor/tinymce/tinymce.min.js') }}"></script>
    <!-- Template Main JS File -->
    <script src="{{ asset('js/main.js') }}"></script>
    <!-- Add SweetAlert2 for toast notifications -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            {% for message in app.flashes('success') %}
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: '{{ message }}',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                });
            {% endfor %}
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const profilePictureInput = document.getElementById('registration_form_photoDeProfil');
            const profilePicturePreview = document.getElementById('profile-picture-preview');

            profilePictureInput.addEventListener('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        profilePicturePreview.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>

{% endblock %}
