{% extends 'base.html.twig' %}

{% block title %}Edit Reponse{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary fw-bold">
            Modifier la Réponse <i class="fas fa-edit me-2"></i>
        </h1>

        <div class="card shadow-lg p-4 mx-auto" style="max-width: 800px;">
            {{ form_start(form, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate'}}) }}
                {# Texte de la réponse #}
                <div class="col-md-12">
                    {{ form_label(form.texte, 'Texte de la réponse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.texte, {
                        'attr': {
                            'class': 'form-control' ~ (form.texte.vars.valid ? '' : ' is-invalid'),
                            'placeholder': 'Entrez le texte de la réponse',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Le texte de la réponse ne peut pas être vide et doit contenir entre 5 et 255 caractères.
                    </div>
                </div>

                {# Est-ce la bonne réponse ? #}
                <div class="col-md-12">
                    <div class="form-check">
                        {{ form_widget(form.estCorrecte, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.estCorrecte, 'Est-ce la bonne réponse ?', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                    </div>
                </div>

                {# Question associée #}
                <div class="col-md-12">
                    {{ form_label(form.question, 'Question associée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.question, {
                        'attr': {
                            'class': 'form-select' ~ (form.question.vars.valid ? '' : ' is-invalid'),
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez sélectionner une question.
                    </div>
                </div>

                {# Submit button #}
                <div class="col-12">
                    <button style="margin-left: 300px;" type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </button>
                </div>
            {{ form_end(form) }}
        </div>

        {# Back to list link #}
        <div class="mt-4 text-center">
            <a href="{{ path('app_reponse_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
        </div>
   </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (() => {
            'use strict';

            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
{% endblock %}