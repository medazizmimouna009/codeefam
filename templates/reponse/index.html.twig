{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
     <style>
        /* Your existing custom styles */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: rgb(10, 42, 129) !important;
            color: white;
        }
        .card-footer {
            background-color: #f8f9fa;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-primary {
            background-color: rgb(17, 31, 122) !important;
            border: none;
        }
        .btn-primary:hover {
            background-color: rgb(17, 31, 122) !important;
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
        }
        .correct-tick {
            color: green;
            font-weight: bold;
        }

        /* Custom spacing for action buttons */
        .action-buttons .btn {
            margin-right: 30px; /* Adjust the spacing as needed */
        }
        .action-buttons .btn:last-child {
            margin-right: -100px; /* Remove margin from the last button */
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h1 class="h4 mb-0">Liste des réponses</h1>
                        </div>
                        <div class="card-body">
                            <!-- Formulaire de recherche et de filtre -->
                            <div class="mb-3">
                                <form method="get" action="{{ path('app_reponse_index') }}" class="form-inline">
                                    <div class="form-group mx-sm-3 mb-2">
                                        <input type="text" name="search" class="form-control" placeholder="Rechercher une réponse..." value="{{ app.request.query.get('search') }}">
                                    </div>
                                    <div class="form-group mx-sm-3 mb-2">
                                        <select name="question" class="form-control">
                                            <option value="">Toutes les questions</option>
                                            {% for question in questions %}
                                                <option value="{{ question.id }}" {{ app.request.query.get('question') == question.id ? 'selected' : '' }}>{{ question.texte }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary mb-2">Rechercher</button>
                                </form>
                            </div>

                            <!-- Tableau des réponses -->
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Texte</th>
                                        <th>EstCorrecte</th>
                                        <th>Question</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for reponse in reponses %}
                                    <tr>
                                        <td>{{ reponse.id }}</td>
                                        <td>{{ reponse.texte }}</td>
                                        <td>
                                            {% if reponse.estCorrecte %}
                                                <span class="correct-tick">✓</span>
                                            {% else %}
                                                <span>✗</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ reponse.question.texte }}</td>
                                        <td>
   <td class="action-buttons">
    <!-- Button to trigger the modal -->
    <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#reponseModal{{ reponse.id }}" title="Voir">
        <i class="fas fa-eye fa-sm"></i>
    </button>
    <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
        <i class="fas fa-pen fa-sm"></i>
    </a>
    <form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?');" style="display: inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
        <button class="btn btn-danger btn-sm" title="Supprimer">
            <i class="fas fa-trash fa-sm"></i>
        </button>
    </form>
</td>
                                    </tr>

                                    <!-- Modal for viewing response details -->
                                    <div class="modal fade" id="reponseModal{{ reponse.id }}" tabindex="-1" aria-labelledby="reponseModalLabel{{ reponse.id }}" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="reponseModalLabel{{ reponse.id }}">Détails de la réponse</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                  
                                                    <p><strong>Texte:</strong> {{ reponse.texte }}</p>
                                                    <p><strong>EstCorrecte:</strong> {% if reponse.estCorrecte %}✓{% else %}✗{% endif %}</p>
                                                    <p><strong>Question associé:</strong> {{ reponse.question.texte }}</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <tr>
                                        <td colspan="5">Aucune réponse trouvée</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer text-end">
                            <a href="{{ path('app_reponse_new') }}" class="btn btn-success">Créer une nouvelle réponse</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}