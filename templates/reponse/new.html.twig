{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle réponse{% endblock %}

{% block stylesheets %}
    <style>
        /* Custom styles for the response form */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color:rgb(17, 31, 122) !important;
            color: white;
        }
        .card-footer {
            background-color: #f8f9fa;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-primary {
            background-color:rgb(17, 31, 122) !important;
            border: none;
        }
        .btn-primary:hover {
            background-color:rgb(17, 31, 122) !important;
        }
        .btn-secondary {
            background-color: rgb(17, 31, 122) !important;
            border: none;
        }
        .btn-secondary:hover {
            background-color: rgb(17, 31, 122) !important;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
        }
    </style>

  
{% endblock %}

{% block body %}
    <main>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h1 class="h4 mb-0">Créer une nouvelle réponse</h1>
                        </div>
                        <div class="card-body">
                            {{ include('reponse/_form.html.twig') }}
                        </div>
                        <div class="card-footer text-end">
                            <a href="{{ path('app_reponse_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Vendor JS Files -->

{% endblock %}