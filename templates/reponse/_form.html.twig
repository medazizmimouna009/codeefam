{{ form_start(form, {'attr': {'class': 'row g-3', 'novalidate': 'novalidate'}}) }}
    {# Texte de la réponse #}
    <div class="col-md-12">
        {{ form_label(form.texte, 'Texte de la réponse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.texte, {
            'attr': {
                'class': 'form-control' ~ (form.texte.vars.valid ? '' : ' is-invalid'),
                'placeholder': 'Entrez le texte de la réponse'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.texte) }}
        </div>
    </div>

    {# Est-ce la bonne réponse ? #}
    <div class="col-md-12">
        <div class="form-check">
            {{ form_widget(form.estCorrecte, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(form.estCorrecte, 'Est-ce la bonne réponse ?', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
        </div>
    </div>

    {# Question associée #}
    <div class="col-md-12">
        {{ form_label(form.question, 'Question associée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.question, {
            'attr': {
                'class': 'form-select' ~ (form.question.vars.valid ? '' : ' is-invalid')
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.question) }}
        </div>
    </div>

    {# Submit button #}
    <div class="col-12">
        <button style="margin-left: 300px;" type="submit" class="btn btn-success btn-lg">
            <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}