{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h1>Admin</h1>

    {% if admin.role == 'ROLE_ADMIN' %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ admin.email }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ admin.role }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ admin.password }}</td>
                </tr>
                <tr>
                    <th>IsVerified</th>
                    <td>{{ admin.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ admin.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ admin.prenom }}</td>
                </tr>
                <tr>
                    <th>DateDeNaissance</th>
                    <td>{{ admin.dateDeNaissance ? admin.dateDeNaissance|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>NumTel</th>
                    <td>{{ admin.numTel }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ admin.adresse }}</td>
                </tr>
                <tr>
                    <th>Bio</th>
                    <td>{{ admin.bio }}</td>
                </tr>
                <tr>
                    <th>PhotoDeProfil</th>
                    <td>{{ admin.photoDeProfil }}</td>
                </tr>
                <tr>
                    <th>DateInscrit</th>
                    <td>{{ admin.dateInscrit ? admin.dateInscrit|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_index') }}">back to list</a>
        <a href="{{ path('app_admin_edit', {'id': admin.id}) }}">edit</a>
        {{ include('admin/_delete_form.html.twig') }}
    {% else %}
        <p>Vous n'avez pas accès à ces informations.</p>
    {% endif %}

{% endblock %}
