<form method="post" action="{{ path('app_cours_delete', {'id': cour.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce cours ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.id) }}">
      {% if is_granted('ROLE_ADMIN') %}
         <button class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button> 
            {% endif %}

               {% if is_granted('ROLE_TUTEUR') %}
         <button class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button> 
            {% endif %}
    
</form>
