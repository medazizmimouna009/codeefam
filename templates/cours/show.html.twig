{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ cour.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cour.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cour.prix }}</td>
            </tr>
           
            <tr>
                <th>TypeAchat</th>
                <td>{{ cour.typeAchat }}</td>
            </tr>
        
            <tr>
                <th>DateAchat</th>
                <td>{{ cour.dateAchat ? cour.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ cour.datefin ? cour.datefin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Satus</th>
                <td>{{ cour.satus }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cours_index') }}">back to list</a>

    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('cours/_delete_form.html.twig') }}
{% endblock %}
