{% extends 'base.html.twig' %}

{% block title %}New NomCours{% endblock %}

{% block body %}
    <h1>Create new NomCours</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

        {# Champ Nom #}
        <div class="form-group">
            {{ form_label(form.nom, "Nom du cours") }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (not form.nom.vars.valid ? ' is-invalid' : '')}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.nom) }} {# Affiche les messages d'erreur #}
            </div>
        </div>

        {# Champ Catégorie #}
        <div class="form-group">
            {{ form_label(form.categorie, "Catégorie") }}
            {{ form_widget(form.categorie, {'attr': {'class': 'form-control' ~ (not form.categorie.vars.valid ? ' is-invalid' : '')}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.categorie) }} {# Affiche les messages d'erreur #}
            </div>
        </div>

        {# Bouton de soumission #}
        <button type="submit" class="btn btn-primary">Create</button>

    {{ form_end(form) }}

    {# Lien de retour à la liste #}
    <a href="{{ path('app_nom_cours_index') }}" class="btn btn-secondary mt-3">back to list</a>
{% endblock %}