<form method="post" action="{{ path('app_video_delete', {'id': video.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette vidéo ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</form>
