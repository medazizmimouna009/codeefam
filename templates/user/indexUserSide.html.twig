{% extends 'base.html.twig' %}


{% block title %}User index{% endblock %}

{% block body %}
    <h1>User cote user index</h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Email</th>
             
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateDeNaissance</th>
               
                <th>Bio</th>
                <th>PhotoDeProfil</th>
            
              
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            {% if user.role == 'ROLE_USER' %}
            <tr>
               
                <td>{{ user.email }}</td>
               
                
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d') : '' }}</td>
               
                <td>{{ user.bio }}</td>
                <td>{{ user.photoDeProfil }}</td>
         
              
            </tr>
        {% endif %}
        {% else %}
            <tr>
                <td colspan="14">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% block title %}User List{% endblock %}

{% block stylesheets %}
    <style>
        .floating-card {
            margin-top: 50px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #0d6efd;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
        .card-footer {
            background-color: #f8f9fa;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }
        .table {
            margin-bottom: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card floating-card">
                    <div class="card-header">
                        <h1 class="h4 mb-0">User List</h1>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Email</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prenom</th>
                                    <th scope="col">Date de Naissance</th>
                                    <th scope="col">Bio</th>
                                    <th scope="col">Photo de Profil</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    {% if 'ROLE_USER' in user.roles %}
                                        <tr>
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.nom }}</td>
                                            <td>{{ user.prenom }}</td>
                                            <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d') : '' }}</td>
                                            <td>{{ user.bio }}</td>
                                            <td>
                                                <img src="{{ asset('uploads/profile_pictures/' ~ (user.photoDeProfil ?: 'default-profile.png')) }}" alt="Profile Picture" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% else %}
                                    <tr>
                                        <td colspan="6">Aucun utilisateur trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
